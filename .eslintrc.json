{
  "root": true,
  "extends": ["noise"],
  "rules": {
    "import/no-extraneous-dependencies": [
      "error",
      {
        "devDependencies": ["**/*.stories.{js,jsx,ts,tsx}"]
      }
    ]
  },
  "overrides": [
    {
      "files": ["cms/**"],
      "extends": ["noise-node"],
      "globals": {
        "strapi": true
      }
    },
    {
      "files": ["cms/config/**"],
      "rules": {
        "no-magic-numbers": "off"
      }
    },
    {
      "files": ["design/components/**", "site/pages/**"],
      "extends": ["noise-browser"]
    },
    {
      "files": ["**/*.{jsx,tsx}"],
      "extends": ["noise-react"],
      "rules": {
        "react/jsx-props-no-spreading": "off"
      }
    },
    {
      "files": ["**/*.{ts,tsx}"],
      "extends": ["noise-ts"]
    },
    {
      "files": ["design/components/**.stories.{js,jsx,ts,tsx}"],
      "rules": {
        "import/no-anonymous-default-export": "off",
        "import/no-internal-modules": [
          "error",
          {
            "allow": ["@storybook/**"]
          }
        ]
      }
    },
    {
      "files": ["site/pages/**"],
      "rules": {
        "import/no-internal-modules": [
          "error",
          {
            "allow": ["**/*.css", "next/app", "next/head", "next/link"]
          }
        ]
      }
    }
  ]
}
