{
  "root": true,
  "extends": ["noise"],
  "overrides": [
    {
      "files": ["cms/**"],
      "extends": ["noise-node"],
      "globals": {
        "strapi": true
      }
    },
    {
      "files": ["cms/config/**"],
      "rules": {
        "no-magic-numbers": "off"
      }
    },
    {
      "files": ["design/stories/**", "site/pages/**"],
      "extends": ["noise-browser"]
    },
    {
      "files": ["**/*.{jsx,tsx}"],
      "extends": ["noise-react"],
      "rules": {
        "react/jsx-props-no-spreading": "off"
      }
    },
    {
      "files": ["**/*.{ts,tsx}"],
      "extends": ["noise-ts"]
    },
    {
      "files": ["design/stories/**.stories.{js,jsx,ts,tsx}"],
      "rules": {
        "import/no-anonymous-default-export": "off"
      }
    },
    {
      "files": ["site/pages/**"],
      "rules": {
        "import/no-internal-modules": [
          "error",
          {
            "allow": ["**/*.css", "next/app", "next/head"]
          }
        ]
      }
    },
    {
      "files": ["site/pages/_*.jsx"],
      "rules": {
        "react/prop-types": "off"
      }
    }
  ]
}
