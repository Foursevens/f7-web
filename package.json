{
  "name": "f7-web",
  "version": "1.0.0",
  "private": true,
  "repository": "git@github.com:Foursevens/f7-web.git",
  "engines": {
    "node": "^12 || ^14"
  },
  "scripts": {
    "build:heroku": "yarn design build:components && yarn cms build",
    "build:vercel": "yarn design build:components && yarn site build && mv site/public/ public/",
    "clean": "rimraf '*/dist' 'site/.next' && yarn dev",
    "cms": "yarn workspace @f7-web/cms",
    "design": "yarn workspace @f7-web/design",
    "dev": "pm2 restart pm2-dev.yml",
    "heroku-postbuild": "yarn build:heroku",
    "lint": "eslint --cache --fix '**/*.{js,jsx,ts,tsx}'",
    "pm2": "pm2",
    "site": "yarn workspace @f7-web/site",
    "test": "eslint --cache '**/*.{js,jsx,ts,tsx}'"
  },
  "devDependencies": {
    "@types/node": "^12.12.61",
    "@types/react": "^16.9.49",
    "@types/react-dom": "^16.9.8",
    "eslint": "^7.9.0",
    "eslint-config-noise": "^0.8.2",
    "eslint-config-noise-browser": "^0.8.0",
    "eslint-config-noise-node": "^0.8.0",
    "eslint-config-noise-react": "^0.8.0",
    "eslint-config-noise-ts": "^0.8.0",
    "plop": "^2.7.4",
    "pm2": "^4.5.0",
    "prettier": "^2.1.2",
    "rimraf": "^3.0.2",
    "tslib": "^2.0.1",
    "typescript": "^4.0.2"
  },
  "workspaces": [
    "cms/",
    "design/",
    "site/"
  ]
}
