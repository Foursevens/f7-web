{
  "name": "f7-web",
  "version": "1.0.0",
  "private": true,
  "repository": "git@github.com:Foursevens/f7-web.git",
  "engines": {
    "node": "^12 || ^14"
  },
  "scripts": {
    "build": "yarn workspaces foreach --parallel --topological run build",
    "build:heroku": "yarn design build:components && yarn cms build",
    "build:vercel": "yarn design build:components && yarn site build && mv site/public/ public/",
    "clean": "yarn workspaces foreach --parallel run clean",
    "cms": "yarn workspace @f7-web/cms",
    "design": "yarn workspace @f7-web/design",
    "dev": "yarn run start:dev",
    "heroku-postbuild": "yarn build:heroku",
    "lint": "eslint --cache --fix '**/*.{js,jsx,ts,tsx}'",
    "pm2": "pm2",
    "site": "yarn workspace @f7-web/site",
    "start": "pm2 start pm2.yml",
    "start:dev": "pm2 restart pm2-dev.yml",
    "stop": "pm2 stop pm2.yml",
    "stop:dev": "pm2 stop pm2-dev.yml",
    "test": "eslint --cache '**/*.{js,jsx,ts,tsx}'"
  },
  "devDependencies": {
    "@types/node": "^12.19.7",
    "@types/react": "^17.0.0",
    "@types/react-dom": "^17.0.0",
    "eslint": "^7.14.0",
    "eslint-config-noise": "^0.10.5",
    "eslint-config-noise-browser": "^0.10.1",
    "eslint-config-noise-node": "^0.10.1",
    "eslint-config-noise-react": "^0.10.1",
    "eslint-config-noise-ts": "^0.10.2",
    "plop": "^2.7.4",
    "pm2": "^4.5.0",
    "prettier": "^2.1.0",
    "tslib": "^2.0.3",
    "typescript": "^4.1.2"
  },
  "workspaces": [
    "cms/",
    "design/",
    "site/"
  ]
}
